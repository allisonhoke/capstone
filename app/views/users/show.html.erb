<div class="user-body">

  <header class="header container">
    <div class="-dashboard-user row">
      <p class="col-xs-6">Hi, <%= @user["name"]%>!</p>
      <link rel="stylesheet" href="/css/master.css">
      <%= link_to 'Play', user_games_path(@user[:_id]), class: "user-nav col-xs-2" %>
      <%= link_to 'Log Out', logout_path, method: :delete, class: "user-nav col-xs-2" %>
    </div>
  </header>

  <div class="user-stats container">
    <article class="row">
      <section class="top-games col-xs-5">
        <table class="table-bordered">
          <h3 class="top-five">Top 5 Games</h3>
          <tr>
            <th>Time:</th>
            <th>Board:</th>
          </tr>
          <% @top_games.each do |game| %>
          <tr>
            <td><%= Game.pretty_time(game[:game_time]) %></td>
            <td><%= Game.pretty_board(game[:game][:board], game[:game][:target])  %></td>

          </tr>
          <% end %>
        </table>
      </section>

      <section class="games col-xs-5">
        <h3 class="top-five">User Stats</h3>
        <p class="col-xs-12">Number of puzzles solved: <%= @number_of_games%></p>
        <p class="col-xs-12">Most cards used in a game: <%= @highest_num_cards_used %></p>

      </section>
    </article>
  </div>
</div>

<%#= "Number of completed puzzles: " + @user.num_puzzles%>
